{
  "compilerOptions": {
    "target": "es2016",
    "resolveJsonModule": true,
    "module": "CommonJS",
    "rootDirs": ["./src"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
